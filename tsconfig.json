{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
